<Window x:Class="FindTheCarrot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindTheCarrot"
        mc:Ignorable="d"
        Title="Find The Carrot" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Start" Margin="20" Width="100" Height="40" FontSize="20" FontWeight="Bold" Click="Start_Click"/>
            <Button Content="Options" Margin="20" Width="100" Height="40" FontSize="20" FontWeight="Bold" Click="Options_Click"/>
            <Button Content="Exit" Margin="20" Width="100" Height="40" FontSize="20" FontWeight="Bold" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
